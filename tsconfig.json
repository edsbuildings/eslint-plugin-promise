{
  "compilerOptions": {
    "lib": ["es2020", "dom"],
    "target": "es6",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "stripInternal": true,
    "outDir": "dist"
  },
  "include": ["./src"],
  "exclude": ["./src/__tests__"]
}
